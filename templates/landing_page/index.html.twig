		<style>
			html,
			body {
				overflow-x: hidden;
				max-width: 100vw;
			}

			.logo-container {
				width: 60px;
				height: 60px;
				border-radius: 10px;
				box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
				overflow: hidden;
				display: flex;
				background-color: white;
				align-items: center;
				justify-content: center;
			}

			.logo-container img {
				max-width: 80%;
				max-height: 80%;
				object-fit: contain;
			}

			.title-gradient {
				font-family: 'UrbaneRounded', sans-serif;
				font-size: 24px;
				font-weight: 600;
				background: linear-gradient(to right, #ec008c, #f6941f);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin-left: 8px;
			}

			.hero::before {
				content: "";
				position: absolute;
				inset: 0;
				z-index: 1;
				background: rgba(255, 255, 255, 0.3);
				backdrop-filter: blur(10px);
				-webkit-backdrop-filter: blur(10px);
			}


			.hero {
				position: relative;
				min-height: 80vh;
				background: url('{{ asset('build/images/background-homepagz.png') }}') center center / cover no-repeat fixed;
				display: flex;
				align-items: flex-start;
				justify-content: flex-start;
				padding: 2rem;
				overflow: hidden;
			}

			.hero::before {
				content: "";
				position: absolute;
				inset: 0;
				z-index: 1;
			}

			.hero::after {
				content: "";
				position: absolute;
				bottom: 0;
				left: 0;
				width: 100%;
				height: 150px;
				background: linear-gradient(transparent, #fff);
				z-index: 2;
			}

			.custom-card {
				position: relative;
				z-index: 3;
				background: #fff;
				border-radius: 3rem;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
				width: 700px;
				height: 400px;
				padding: 5rem;
				box-sizing: border-box;
				overflow: hidden;
			}

			.gradient-text {
				font-family: 'UrbaneRounded', sans-serif;
				background: linear-gradient(to right, #ec008c, #f6941f);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}

			.btn-gradient {
				background: linear-gradient(to right, #ec008c, #f6941f);
				border: none;
				color: #fff;
				font-weight: 600;
				padding: 0.75rem 1.5rem;
				border-radius: 30px;
			}

			.btn-gradient:hover {
				opacity: 0.9;
				color: #fff;
			}

			.offers {
				margin-top: 100px;
				padding: 4rem 0;
				background: #fff;
			}

			.offers h2 {
				font-size: 2rem;
				font-weight: 700;
				margin-bottom: 2rem;
				text-align: center;
			}

			.offers h2 span {
				display: block;
			}

			.pink-circle-container {
				position: relative;
				display: inline-block;
			}

			.pink-circle-container::before {
				content: "";
				position: absolute;
				top: 50%;
				left: 50%;
				width: 220px;
				height: 220px;
				background: radial-gradient(circle, rgba(236, 0, 140, 0.15), transparent 70%);
				border-radius: 50%;
				transform: translate(-50%, -50%);
				z-index: -1;
			}

			.pink-circle-container img {
				max-width: 300px;
				width: 100%;
				height: auto;
				display: block;
			}

			.offers .title-bullet {
				color: #f58a10;
				font-weight: bold;
				margin-right: 8px;
			}

			.offer-number {
				font-size: 3.5rem;
				line-height: 1;
				font-weight: 700;
			}

			.item-text {
				margin-top: 0.5rem;
				display: block;
			}

			.offer-title {
				margin-bottom: 1.5rem;
			}

			.description {
				margin-top: 1.5rem;
			}

			.connect-plus {
				position: relative;
				background: linear-gradient(to right, #ec008c 0%, #f6941f 50%, #ffffff 100%);
			}

			.btn-white-rounded {
				background-color: #fff;
				color: #ec008c;
				border: 2px solid #ec008c;
				border-radius: 50px;
				font-weight: 600;
				padding: 0.75rem 1.5rem;
				transition: background 0.2s, color 0.2s;
			}

			.btn-white-rounded:hover {
				background-color: #ec008c;
				color: #fff;
			}

			.btoon {
				background-color: #fff;
				border-radius: 50px;
				padding: 0.75rem 1.5rem;
				font-weight: 600;
				text-align: left;
				display: inline-block;
				max-width: 100%;
			}

			.steps-section {
				background-color: #fff;
				padding: 4rem 0;
			}

			.steps-wrapper {
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.step {
				text-align: center;
				position: relative;
				padding: 0 1rem;
				flex: 0 0 auto;
			}

			.step-circle {
				width: 80px;
				height: 80px;
				border-radius: 50%;
				background: linear-gradient(135deg, #ec008c, #f6941f);
				display: flex;
				align-items: center;
				justify-content: center;
				color: #fff;
				font-size: 1.5rem;
				box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
				margin: 0 auto 1rem;
			}

			.step-line {
				flex: 1;
				max-width: 100px;
				height: 4px;
				background: linear-gradient(to right, #ec008c, #f6941f);
				margin: 0 1rem;
				border-radius: 2px;
			}

			.partner-marquee {
				background-color: #f9f9f9;
				padding: 2rem 0;
				overflow: hidden;
				position: relative;
			}

			.marquee-container {
				overflow: hidden;
				position: relative;
			}

			.marquee {
				display: flex;
				align-items: center;
				animation: marquee 25s linear infinite;
			}

			.brand-partner {
				width: 150px;
				height: 100px;
				object-fit: contain;
				margin: 0 2rem;
				transition: transform 0.3s ease;
			}

			.brand-partner:hover {
				transform: scale(1.05);
			}

			.kit-items li {
				min-width: 120px;
			}

			.kit-items .plus-sign {
				font-size: 2.5rem;
				line-height: 1;
				padding-top: 0.75rem; /* Ajuste la position verticale */
			}

			.kit-items .offer-number {
				font-size: 3rem;
				margin-bottom: 0.25rem;
			}

			.kit-items .item-text {
				font-size: 1rem;
				line-height: 1.3;
			}

			@media(max-width: 768px) {
				.kit-items {
					flex-direction: column !important;
					gap: 2rem !important;
				}

				.kit-items li {
					min-width: unset;
				}

				.kit-items .plus-sign {
					padding-top: 0; /* Centré par défaut */
				}
			}


			@keyframes marquee {
				0% {
					transform: translateX(0);
				}

				100% {
					transform: translateX(-50%);
				}
			}

			.gradient-line {
				width: 60px;
				height: 4px;
				background: linear-gradient(to right, #ec008c, #f6941f);
				margin: 0 auto;
			}

			.connect-style {
				font-family: 'Segoe Script', cursive;
				margin-left: 5px;
			}

			@media(max-width: 992px) {
				.custom-card {
					width: 90%;
					height: auto;
					padding: 3rem;
				}

				.offers .row {
					text-align: center;
				}
			}

			@media(max-width: 576px) {

				.hero {
					padding: 1rem;
					background-attachment: scroll;
				}

				.custom-card {
					width: 90%;
					height: auto;
					padding: 2rem;
				}

				.title-gradient {
					font-size: 18px;
				}

				.btn-gradient {
					padding: 0.5rem 1rem;
				}

				.offers h2 {
					font-size: 1.5rem;
				}

				.pink-circle-container img {
					max-width: 180px;
				}

				.connect-plus {
					padding: 2rem 0;
				}

				.steps-wrapper {
					flex-direction: column;
					gap: 2rem;
				}

				.step-line {
					display: none;
				}

				.brand-partner {
					width: 120px;
					height: 80px;
					margin: 0 1rem;
				}

				.connect-plus h2 {
					font-size: 2rem;
					text-align: center;
				}

				.connect-plus p {
					font-size: 1rem;
					text-align: center;
				}

				.connect-plus .col-md-6 {
					text-align: center;
				}
			}

			.btn-gradient:hover {
				transform: translateY(-2px);
				color: white;
			}

			@media(max-width: 767.98px) {
				.offers .kit-content {
					text-align: center;
					display: flex;
					flex-direction: column;
					align-items: center;
				}

				.offers .kit-content h3 {
