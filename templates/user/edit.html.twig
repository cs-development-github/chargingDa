{% extends 'base.html.twig' %}

{% block title %}Modifier Utilisateur{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f8f9fa;
    }

    .form-edit-user {
        max-width: 500px;
        margin: 100px auto 60px auto;
        padding: 2.5rem 2rem;
        background: #fff;
        border-radius: 15px;
        padding-top: 50px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-edit-user h2 {
        font-weight: 600;
        color: #343a40;
        margin-bottom: 2rem;
    }

    label {
        font-weight: 600;
        color: #495057;
    }

    .btn-save {
        background-color: #198754;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-save:hover {
        background-color: #157347;
    }

    .form-check-label {
        user-select: none;
    }
</style>

<div class="form-edit-user shadow-sm">
    <h2 class="text-center"><i class="bi bi-person-lines-fill me-2"></i>Modifier Utilisateur</h2>

    {{ form_start(form) }}

    <div class="mb-4">
        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.name, { 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Pr√©nom'} }) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.lastname, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.lastname, { 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Nom de
        famille'} }) }}
        {{ form_errors(form.lastname) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.email, { 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Email'} }) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.roles, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.roles, { 'attr': {'class': 'form-select form-select-lg'} }) }}
        {{ form_errors(form.roles) }}
    </div>

    <div class="form-check form-switch mb-4">
        {{ form_widget(form.isActive, { 'attr': {'class': 'form-check-input', 'id': 'isActiveSwitch'} }) }}
        {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label', 'for': 'isActiveSwitch'}}) }}
        {{ form_errors(form.isActive) }}
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_user') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Retour
        </a>
        <button type="submit" class="btn btn-save">
            <i class="bi bi-check-circle"></i> Sauvegarder
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}