<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard{% endblock %}</title>

    <link rel="icon" href="{{ asset('build/images/favicon.png') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    {{ encore_entry_link_tags('app') }}


    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
</head>

{% block style %} 



<style>
.main-content {
	background-color: #a6a7a6;
	background-image: url('../build/images/background-dashboard.png');
	background-repeat: no-repeat;
	background-position: center center;
    background-size: 500px 300px;
    height: 100%;
    min-height: 100vh;
}

.main-content::before {
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-image: url('../images/background-dashboard.png');
	background-repeat: no-repeat;
	background-position: center;
	background-size: 300px 200px; /* ou contain/cover/auto */
	filter: blur(5px);
	z-index: 0;
	opacity: 0.7;
}

.main-content > * {
	position: relative;
	z-index: 1;
}

</style>

{% endblock %}

<body>
    {% include 'bars/navbar.html.twig' %}

    <main class="main-content">
        {% block body %}{% endblock %}
    </main>
</body>

</html>