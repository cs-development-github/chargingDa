        justify-content: center;
    }

    .difficulty-bar {
        width: 40px;
        height: 6px;
        border-radius: 4px;
        background-color: #e0e0e0;
    }

    .difficulty-bar.low {
        background-color: #28a745;
    }

    .difficulty-bar.mid {
        background-color: #fd7e14;
    }

    .difficulty-bar.hard {
        background-color: #dc3545;
    }

    .modal-backdrop.show {
        z-index: 1040;
    }

    .modal.z-3 {
        z-index: 1050;
    }
</style>