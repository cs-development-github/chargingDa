        position: relative;
        text-align: center;
        animation: fadeIn 0.3s ease-in-out;

        /* Quitar el margin para usar flexbox */
        margin: 0;
        box-sizing: border-box;
        max-height: 90vh;
        /* Evitar que se salga de la pantalla en vertical */
        overflow-y: auto;
    }

    /* Cerrar botón sin cambios */
    .custom-modal-close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 24px;
        font-weight: bold;
        color: #aaa;
        cursor: pointer;
    }

    .custom-modal-close:hover {
        color: #000;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* Media query para pantallas muy pequeñas */
    @media (max-width: 400px) {
        .custom-modal-content {
            padding: 15px 20px;
            max-width: 90vw;
            width: 90vw;
            border-radius: 10px;
        }

        .custom-modal-close {
            font-size: 20px;
            top: 8px;
            right: 10px;
        }
    }



    .station-card {
        overflow: hidden;
    }

    .platform-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 1.3rem;
        z-index: 3;
        background: white;
        padding: 4px;
        border-radius: 6px;
    }

    .difficulty-display {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .difficulty-bars {
        display: flex;
