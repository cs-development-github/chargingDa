    /* Nueva clase para mostrar el modal y centrar */
    .custom-modal.show {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
    }


    .custom-modal-content {
        background-color: #fff;
        padding: 20px 30px;
