<style>
    main {
        margin-left: 260px;
        padding: 90px 20px 20px;
        transition: margin-left 0.3s ease-in-out;
    }

    .sidebar {
        width: 260px;
        background-image: url('{{ asset("build/images/background.png") }}');
        background-size: cover;
        background-position: center;
        position: fixed;
        top: 70px;
        left: 0;
        height: calc(100vh - 70px);
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        padding: 1rem;
        transition: transform 0.3s ease-in-out;
    }

    .sidebar.collapsed {
        transform: translateX(-100%);
    }

    .sidebar.collapsed+main {
        margin-left: 0;
    }

    .navbar-toggler {
        background: none;
        border: none;
        font-size: 1.8rem;
        cursor: pointer;
        outline: none;
    }

    .sidebar .menu {
        flex-grow: 1;
    }

    .sidebar .btn {
        width: 100%;
        text-align: left;
        padding: 12px 15px;
        font-size: 0.9rem;
        font-weight: 600;
        border-radius: 10px;
    }

    .sidebar .btn-light {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    }

    .sidebar .btn-light i {
        font-size: 1.3rem;
        margin-right: 10px;
    }

    .sidebar .ajouter-client {
        margin-top: 20px;
        text-transform: uppercase;
        font-size: 0.85rem;
        justify-content: center;
    }

    .sidebar .logout {
        margin-top: auto;
        text-transform: uppercase;
        font-size: 0.85rem;
        justify-content: center;
        transition: transform 0.3s ease-in-out;
    }

    .sidebar .profile {
        background: linear-gradient(to right, #00c6ff, #0072ff);
        color: white;
        font-weight: bold;
        transition: transform 0.3s ease-in-out;
    }

    .sidebar .profile:hover,
    .sidebar .logout:hover {
        transform: scale(1.03);
    }

    .btn-add-client:hover {
        background: linear-gradient(to right, #ff5c8a, #ffa733);
        transform: scale(1.05);
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
    }
    .btn-profile:hover {
        background: linear-gradient(to right, #3b8aff, #00e1ff);
        transform: scale(1.05);
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
    }
</style>

<div class="sidebar">
    <div class="menu">
        <a href="{{ path('app_equipes') }}" class="btn btn-light mb-3 d-flex align-items-center px-3 py-2 rounded-3">
            <i class="bi bi-people-fill me-2"></i> <span class="text-truncate">MES ÉQUIPES</span>
        </a>
        <a href="{{ path('app_clients') }}" class="btn btn-light mb-3 d-flex align-items-center px-3 py-2 rounded-3">
            <i class="bi bi-person me-2"></i> <span class="text-truncate">MES CLIENTS</span>
        </a>
        <a href="{{ path('app_charging_stations') }}"
            class="btn btn-light mb-4 d-flex align-items-center px-3 py-2 rounded-3 text-truncate"
            style="height: 44px;">
            <i class="bi bi-collection-fill me-2"></i> <span>DOC. BORNE</span>
        </a>
        <a href="{{ path('app_add_client') }}"
            class="btn text-white fw-bold d-flex align-items-center justify-content-between px-4 py-2 rounded-3 shadow-sm mb-3 btn-add-client"
            style="background: linear-gradient(to right, #ff4081, #ff8c00);
           border: none;
           font-size: 14px;
           white-space: nowrap;
           transition: all 0.3s ease-in-out;
           box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.15);">
            <i class="bi bi-plus-lg me-2"></i>
            <span class="text-truncate">AJOUTER UN CLIENT</span>
        </a>

        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_user') }}"
            class="btn btn-light mb-4 d-flex align-items-center px-3 py-2 rounded-3 text-truncate"
            style="height: 44px;">
            <i class="bi bi-person me-2"></i> <span>Utilisateurs</span>
        </a>
        {% endif %}
    </div>

    <a href="{{ path('app_account') }}"
        class="btn profile d-flex align-items-center px-3 py-2 rounded-3 mb-3 btn-profile" style="border: 1px solid rgba(0, 0, 0, 0.1);
           background: linear-gradient(to right, #4facfe, #00f2fe);
           color: #fff;
           font-size: 14px;
           transition: all 0.3s ease-in-out;
           box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.1);">
        <i class="bi bi-person-circle me-2"></i> <span class="text-truncate">Mon Profil</span>
    </a>

    <a href="{{ path('app_logout') }}" class="btn logout text-white fw-bold px-3 py-2 rounded-3" style="background: linear-gradient(to right, #ff4081, #ff8c00);
           border: none;
           font-size: 14px;
           box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.15);">
        <i class="bi bi-box-arrow-right me-2"></i> DÉCONNEXION
    </a>

</div>