{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<style>
    :root {
        --gray-color: #818285;
        --input-bg: #fff;
        --button-bg: #f7f7f7;
        --control-height: 50px;
        --shadow-inset: inset 0 3px 6px rgba(0, 0, 0, 0.1);
    }

    .label-gray {
        color: var(--gray-color);
        font-weight: bold;
        margin-bottom: 5px;
    }

    .custom-input {
        background-color: var(--input-bg);
        border: none;
        border-radius: 15px;
        padding: 12px 15px;
        width: 100%;
        height: var(--control-height);
        box-shadow: var(--shadow-inset);
        outline: none;
        transition: box-shadow 0.2s ease-in-out;
    }

    .custom-input:focus {
        box-shadow: inset 0 3px 6px rgba(0, 0, 0, 0.15), 0 0 6px rgba(0, 0, 0, 0.05);
    }

    .attach-btn,
    .attach-file-btn {
        background-color: var(--button-bg);
        color: var(--gray-color);
        border: 1px solid var(--gray-color);
        cursor: pointer;
        transition: opacity 0.3s;
        min-height: var(--control-height);
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .attach-btn {
        border-radius: 30px;
        padding: 6px 12px;
        width: 100%;
    }

    .attach-file-btn {
        border-radius: 40px;
        padding: 10px 20px;
        width: 100%;
    }

    .attach-btn:hover,
    .attach-file-btn:hover {
        opacity: 0.9;
    }

    .profile-pic-wrapper {
        width: 220px;
        height: 220px;
        background: linear-gradient(45deg, #ec008c, #f6941f);
        border-radius: 50%;
        padding: 5px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }

    .profile-pic {
        border-radius: 50%;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .documents-column {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .form-check-label {
        font-size: 0.85rem;
    }

    .save-btn {
        background: linear-gradient(45deg, #ec008c, #f6941f);
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 20px;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 0.9rem;
        transition: opacity 0.3s;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 15px -3px, rgba(0, 0, 0, 0.05) 0px 4px 6px -2px;
    }

    .save-btn:hover {
        opacity: 0.9;
    }

    @media (max-width: 767.98px) {

        .profile-pic-wrapper {
            width: 150px;
            height: 150px;
        }

        .custom-input {
            height: auto;
            padding: 10px 12px;
        }

        .attach-btn,
        .attach-file-btn {
            min-height: auto;
            padding: 8px 10px;
        }
    }
</style>

<div class="container my-5 mt-10"  style="margin-top: 150px">
    <h1 class="text-center mb-4">Mon Profil</h1>

    <div class="row">
        <div class="col-md-4 mb-4">
            <h2>Données Personnelles</h2>

            <div id="update-message" class="mt-2 text-success fw-bold" style="display: none;">
                ✅ Données mises à jour avec succès !
            </div>

            <div class="mb-3">
                <label for="nom" class="form-label label-gray">NOM</label>
                <input type="text" id="nom" name="nom" class="form-control custom-input" value="{{ user.lastname }}"
                    placeholder="Votre nom">
            </div>
            <div class="mb-3">
                <label for="prenom" class="form-label label-gray">PRÉNOM</label>
                <input type="text" id="prenom" name="prenom" class="form-control custom-input"
                    value="{{ user.name }}" placeholder="Votre prénom">
            </div>
            <div class="mb-3">
                <label for="entreprise" class="form-label label-gray">ENTREPRISE</label>
                <input type="text" id="entreprise" name="entreprise" class="form-control custom-input"
                    value="{{ user.societyName }}" placeholder="Nom de l’entreprise">
            </div>
            <div class="mb-3">
                <label for="telephone" class="form-label label-gray">TÉLÉPHONE</label>
                <input type="text" id="telephone" name="telephone" class="form-control custom-input"
                    value="{{ user.phone }}" placeholder="+33...">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label label-gray">EMAIL</label>
                <input type="email" id="email" name="email" class="form-control custom-input" value="{{ user.email }}"
                    placeholder="votre@email.fr">
            </div>

            <div class="text-center mt-3">
                <button type="button" class="save-btn btn btn-primary">
                    <i class="bi bi-pencil"></i> Modifier
                </button>
            </div>
        </div>

    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const saveButton = document.querySelector(".save-btn");
        const updateMessage = document.querySelector("#update-message");

        saveButton.addEventListener("click", function () {
            saveButton.innerHTML = '<i class="bi bi-hourglass-split"></i> Mise à jour...';
            saveButton.disabled = true;

            const userData = {
                name: document.querySelector("#prenom").value,
                lastname: document.querySelector("#nom").value,
                societyName: document.querySelector("#entreprise").value,
                phone: document.querySelector("#telephone").value,
                email: document.querySelector("#email").value
            };

            fetch("{{ path('app_account_update') }}", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "X-Requested-With": "XMLHttpRequest"
                },
                body: JSON.stringify(userData)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.message) {
                        updateMessage.style.display = "block";
                        setTimeout(() => {
                            updateMessage.style.display = "none";
                        }, 3000);
                    } else {
                        alert("Erreur lors de la mise à jour.");
                    }
                })
                .catch(error => console.error("Erreur:", error))
                .finally(() => {
                    saveButton.innerHTML = '<i class="bi bi-pencil"></i> Modifier';
                    saveButton.disabled = false;
                });
        });
    });
</script>
{% endblock %}