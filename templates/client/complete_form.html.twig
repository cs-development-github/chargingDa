{% block body %}
<style>
    * {
        box-sizing: border-box;
    }

    :root {
        --gray-color: #818285;
        --input-bg: #fff;
        --control-height: 50px;
        --shadow-inset: inset 0 3px 6px rgba(0, 0, 0, 0.1);
    }

    .grid-container {
        margin-top: 100px;
    }

    .label-gray {
        color: var(--gray-color);
        font-weight: bold;
        margin-bottom: 5px;
    }

    .custom-input {
        background-color: var(--input-bg);
        border: none;
        border-radius: 15px;
        padding: 12px 15px;
        width: 100%;
        height: var(--control-height);
        box-shadow: var(--shadow-inset);
        outline: none;
        transition: box-shadow 0.2s ease-in-out;
    }

    .custom-input:focus {
        box-shadow: inset 0 3px 6px rgba(0, 0, 0, 0.15), 0 0 6px rgba(0, 0, 0, 0.05);
    }

    .input-row {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .input-row label {
        flex: 0 0 150px;
        color: var(--gray-color);
        font-weight: bold;
    }

    .input-row .custom-input {
        flex: 1;
    }

    .custom-select-wrapper {
        position: relative;
        width: 100%;
        height: var(--control-height);
        background: linear-gradient(45deg, #ec008c, #f6941f);
        padding: 2px;
        border-radius: 15px;
        display: inline-block;
    }

    /* El select sin flecha nativa */
    .custom-select {
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 13px;
        background-color: var(--input-bg);
        padding: 12px 15px;
        font-size: 1rem;
        outline: none;
        appearance: none; /* Oculta la flecha nativa */
        background-image: none; /* Quita la imagen previa */
    }

    /* Ícono de FontAwesome como flecha */
    .select-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #ec008c; /* Color de la flecha */
        font-size: 1rem;
        pointer-events: none;
        z-index: 2; /* Asegura que quede arriba */
    }

    /* Efecto al enfocar el select */
    .custom-select:focus {
        border: 2px solid #ec008c;
        box-shadow: 0 0 5px rgba(236, 0, 140, 0.5);
    }

    .confirm-btn {
        background: linear-gradient(45deg, #ec008c, #f6941f);
        color: #fff;
        border: none;
        padding: 12px 20px;
        border-radius: 20px;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 1rem;
        transition: opacity 0.3s;
        font-weight: bold;
    }

    .confirm-btn:hover {
        opacity: 0.9;
    }
</style>

<div class="container grid-container">
    <h1 class="text-center mb-4">Complétez vos informations</h1>

    {{ form_start(form, { 'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'} }) }}
    <div class="text-center row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6">
                    <div class="input-row">
                        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <div class="input-row">
                        {{ form_label(form.lastname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.lastname, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <div class="input-row">
                        {{ form_label(form.societyName, 'Entreprise *', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.societyName, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <div class="input-row">
                        {{ form_label(form.legalForm, 'Forme juridique', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="custom-select-wrapper">
                            <div class="position-relative">
                                {{ form_widget(form.legalForm, {'attr': {'class': 'custom-select'}}) }}
                                <!-- Ícono de FontAwesome -->
                                <i class="fas fa-chevron-down select-icon"></i>
                            </div>
                        </div>
                    </div>

                    <div class="input-row">
                        {{ form_label(form.adress, 'Adresse de facturation', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.adress, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <div class="input-row">
                        {{ form_label(form.siret, 'Siret', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.siret, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <div class="input-row">
                        {{ form_label(form.numberTva, 'Numéro de TVA', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.numberTva, {'attr': {'class': 'custom-input'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="input-row">
                        {{ form_label(form.codeNaf, 'Code NAF', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.codeNaf, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <div class="input-row">
                        {{ form_label(form.email, 'Email *', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <div class="input-row">
                        {{ form_label(form.phone, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <div class="input-row">
                        {{ form_label(form.priceKwh, 'Prix achat kW', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.priceKwh, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <div class="input-row">
                        {{ form_label(form.priceResale, 'Prix revente kW', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.priceResale, {'attr': {'class': 'custom-input'}}) }}
                    </div>

                    <input type="hidden" name="token" value="{{ client.secureToken }}">

                    <div class="text-center mt-3">
                        <button type="submit" class="confirm-btn">Valider</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
