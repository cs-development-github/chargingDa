{% extends 'base.html.twig' %}

{% block title %}Mes Clients{% endblock %}

{% block body %}
<style>
    .btn-custom {
        border-radius: 10px;
        background: linear-gradient(45deg, #ec008c, #f6941f);
        border: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-custom:hover {
        transform: scale(1.05);
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
    }

    .card-custom {
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
        margin-bottom: 15px;
    }

    .table-header {
        color: #6c757d;
        font-weight: bold;
    }

    .single-line {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-end mb-3">
        <button class="btn text-white fw-bold px-4 py-2 me-2 btn-custom">
            AJOUTER UN CLIENT <i class="bi bi-plus"></i>
        </button>
    </div>

    <div class="d-flex align-items-center mb-3">
        <h3 class="fw-bold mb-0 me-3">MES CLIENTS</h3>
        <div class="d-flex align-items-center">
            <input type="text" class="form-control rounded-pill px-3" placeholder="Rechercher"
                style="max-width: 220px; border: 1px solid #ddd;">
            <button class="btn" style="margin-left: -40px; background: none; border: none;">
                <i class="bi bi-search" style="color: #ec008c;"></i>
            </button>
        </div>
    </div>

    <div class="d-none d-md-block">
        <div class="row text-center mb-3 table-header">
            <div class="col-3 text-uppercase">DÉNOMINATION</div>
            <div class="col-3 text-uppercase">BORNES</div>
            <div class="col-3 text-uppercase">INSTALLATEUR</div>
            <div class="col-3 text-uppercase">CONTRAT</div>
        </div>
        <div class="row">
            <div class="col-12">
                {% for client in clients %}
                <div class="card p-3 mb-3 card-custom">
                    <div class="row align-items-center text-center">
                        <div class="col-3 fw-bold text-dark">{{ client.societyName }}</div>
                        <div class="col-3 fw-bold text-dark">AC 230300</div>
                        <div class="col-3 fw-bold text-dark">Paul le roublard</div>
                        <div class="col-3 d-flex justify-content-center gap-3">
                            <i class="bi bi-eye-fill" style="font-size: 1.2rem; cursor: pointer;"></i>
                            <i class="bi bi-download" style="font-size: 1.2rem; cursor: pointer;"></i>
                        </div>
                    </div>
                </div>
                {% else %}
                <p class="text-center text-muted">Aucun client trouvé.</p>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="d-block d-md-none">
        {% for client in clients %}
        <div class="card p-3 mb-3 card-custom">
            <div class="card-body">
                <h5 class="card-title fw-bold text-dark single-line">
                    {{ client.societyName }}
                </h5>
                <p class="card-text mb-1 single-line">
                    <strong>BORNES:</strong> AC 230300
                </p>
                <p class="card-text mb-1 single-line">
                    <strong>INSTALLATEUR:</strong> Paul le roublard
                </p>
                <div class="d-flex justify-content-end gap-3 mt-2">
                    <i class="bi bi-eye-fill" style="font-size: 1.2rem; cursor: pointer;"></i>
                    <i class="bi bi-download" style="font-size: 1.2rem; cursor: pointer;"></i>
                </div>
            </div>
        </div>
        {% else %}
        <p class="text-center text-muted">Aucun client trouvé.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}