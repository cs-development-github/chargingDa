{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container mt-4" style="margin-top: 100px;"><div class="container mt-10" style="margin-top: 100px">
        <h2 class="mb-3">Prochaine intervention pr√©vue</h2>

        {% if nextIntervention %}
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">
                        üöß Intervention sur {{ nextIntervention.chargingStation.model }}
                    </h5>
                    <p class="card-text">
                        üìÖ <strong>Date pr√©vue :</strong> 21/04/2025
                    </p>
                    <div class="d-flex gap-2">
                        {% if nextIntervention.chargingStation.documentation %}
                            <a href="{{ asset('uploads/' ~ nextIntervention.chargingStation.documentation) }}" 
                               target="_blank" 
                               class="btn btn-secondary">
                                üìÑ Voir la documentation
                            </a>
                        {% endif %}

                        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#imageModal">
                            üñºÔ∏è Notice de supervision
                        </button>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                üì≠ Aucune intervention pr√©vue pour le moment.
            </div>
        {% endif %}
    </div>

    <!-- Modal Bootstrap -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">  {# Utilisation de modal-xl pour un affichage large #}
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Images de la Documentation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-0"> {# Supprime le padding pour un affichage pleine largeur #}
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                {% for i in 1..10 %}
                                    <img src="{{ asset('build/images/Documentation/Autel_' ~ i ~ '.png') }}" 
                                         class="img-fluid w-100 d-block" 
                                         alt="Autel {{ i }}">
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
