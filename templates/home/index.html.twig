{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .btn-gradient {
        background: linear-gradient(45deg, #ec008c, #f6941f);
        border: none;
        border-radius: 9px;
        color: #fff;
        font-weight: bold;
        padding: 10px 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-decoration: none;
    }
    .btn-gradient:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
    .container {
        background-color: #fff;
        border-radius: 10px;
    }
    .card {
        margin-bottom: 20px;
    }
    .modal-body img {
        margin-bottom: 15px;
    }
    @media (max-width: 576px) {
        .container {
            padding: 10px;
        }
        .btn-gradient {
            padding: 8px 16px;
            font-size: 0.85rem;
        }
    }
</style>

<div class="container">
    <h2 class="mb-3">
        <i class="bi bi-calendar-check me-1"></i> Prochaine intervention pr√©vue
    </h2>

    {% if nextIntervention %}
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title text-primary">
                    <i class="bi bi-wrench me-1"></i> Intervention sur {{ nextIntervention.chargingStation.model }}
                </h5>
                <p class="card-text">
                    <i class="bi bi-calendar-event me-1"></i>
                    <strong>Date pr√©vue :</strong> 21/04/2025
                </p>
                <div class="d-flex flex-wrap gap-2">
                    {% if nextIntervention.chargingStation.documentation %}
                        <a href="{{ asset('uploads/' ~ nextIntervention.chargingStation.documentation) }}" 
                           target="_blank" 
                           class="btn-gradient">
                            <i class="bi bi-file-earmark-text me-1"></i> Voir la documentation
                        </a>
                    {% endif %}
                    <button type="button" class="btn-gradient" data-bs-toggle="modal" data-bs-target="#imageModal">
                        <i class="bi bi-image me-1"></i> Notice de supervision
                    </button>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="bi bi-envelope me-2"></i> Aucune intervention pr√©vue pour le moment.
        </div>
    {% endif %}
</div>


<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">
                    <i class="bi bi-images me-1"></i> Images de la Documentation
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body p-0">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                                {% for i in 1..9 %}
                                    <img src="{{ asset('build/images/Documentation/Autel_' ~ i ~ '.png') }}" 
                                        class="img-fluid w-100 d-block" 
                                        alt="Autel {{ i }}">
                            
                                    {% if i == 3 %}
                                        <!-- Boutons de t√©l√©chargement apr√®s la troisi√®me image -->
                                        <div class="d-flex justify-content-center gap-3 mt-3">
                                            <a href="https://play.google.com/store/apps/details?id=com.autel.charge&hl=fr" 
                                               class="btn btn-success d-flex align-items-center" 
                                               target="_blank">
                                                üì± T√©l√©charger sur Google Play
                                            </a>
                                            <a href="https://apps.apple.com/tr/app/autel-charge/id1578454464" 
                                               class="btn btn-secondary d-flex align-items-center" 
                                               target="_blank">
                                                üçè T√©l√©charger sur l'App Store
                                            </a>
                                        </div>
                                    {% endif %}
                            
                                    {% if i == 8 %}
                                        <div class="d-flex justify-content-center">
                                            <button class="btn btn-primary mt-2" onclick="copyToClipboard()">Copier la cl√© OCPP</button>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            
                                <script>
                                    function copyToClipboard() {
                                        navigator.clipboard.writeText("ws://charge-angels.com:80/OCPP16/6290a6cb64eeeee47dd59abe/662a71bfba21fea8c9b6b288/")
                                        .catch(function(err) {
                                            console.error("Erreur lors de la copie : ", err);
                                        });
                                    }
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-gradient" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg me-1"></i> Fermer
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
