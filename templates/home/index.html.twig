<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard{% endblock %}</title>

    <link rel="icon" href="{{ asset('build/images/favicon.png') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    {{ encore_entry_link_tags('app') }}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
</head>

{% block style %}
<style>
    .background-icon {
        position: absolute;
        top: 65%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-image: url('{{ asset(' build/images/background-icon.png') }}');
        background-repeat: no-repeat;
        background-position: center;
        background-size: 50%;
        width: 75%;
        height: 75%;
        z-index: 0;
        /* poner bajo */
        pointer-events: none;
    }

    .main-content>*:not(.background-icon):not(.modal):not(.modalPos) {
        position: relative;
        z-index: 1;
    }


    .main-content {
        position: static;
        /* o eliminar position si tienes */
        z-index: auto;
    }
</style>
{% endblock %}

<body>
    {% include 'bars/navbar.html.twig' %}

    <main class="main-content">
        <div class="background-icon"></div>
        {% block body %}{% endblock %}
    </main>
</body>

</html>